<h1>New Game</h1>

<%= @grid %>

<form action="/score" method="POST" data-turbo="false">
  <label for="user_word">What is the longest word you can find?</label>
  <input type="text" name="user_word">
  <input type="submit" value="Play">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :grid, @grid %>
</form>
